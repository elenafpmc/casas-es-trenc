<%
  extra_classes ||= ""
  label ||= ""
  placeholder ||= ""
  value ||= ""
  name ||= ""
%>

<div class="textarea <%= extra_classes %>">
  <% if label != '' %>
    <label for="<%= name %>" class="textarea__label"><%= label %></label>
  <% end %>
  <textarea id="<%= name %>" name="<%= name %>" placeholder="<%= placeholder %>" class="textarea__field"><%= value %></textarea>
</div>
